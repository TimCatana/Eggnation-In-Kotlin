<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.applicnation.eggnationkotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EggNationKotlin">

        <!-- For AdMob -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7503631457339866~5619526175" />

        <activity
            android:name="com.applicnation.eggnationkotlin.ui.activities.DashboardActivity"
            android:exported="true"></activity>
        <activity
            android:name="com.applicnation.eggnationkotlin.ui.activities.ForgotPasswordActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity android:name="com.applicnation.eggnationkotlin.ui.activities.BaseActivity" />
        <activity
            android:name="com.applicnation.eggnationkotlin.ui.activities.StoreActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.applicnation.eggnationkotlin.ui.activities.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.applicnation.eggnationkotlin.ui.activities.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HomeScreen" />
        <activity
            android:name="com.applicnation.eggnationkotlin.ui.activities.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.applicnation.eggnationkotlin.ui.activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>